<div class="right-panel col-lg-11 col-md-11">
  <div class="show-panel" id="category">
    <div class="table-responsive">
      
        <div class="table-title">
          <div class="row">
            <div class="col-sm-8"><h2>Category Details</h2></div>
            <div class="col-sm-4">
              <a href="/category/add-category" class="btn btn-info add-new"><i class="fa fa-plus"></i> Add New</a>
            </div>
          </div>
        </div>
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Image</th>
              <th>Name</th>
              <th>Parent Category</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each categoryList}}
            <tr>
              <td>{{inc @index}}</td>
              <td class="category-image"><img src="{{this.imageUrl}}" /></td>
              <td>{{this.categoryName}}</td>
              <td>{{this.parentCategory.categoryName}}</td>
              <td>
                <form action="/category/{{_id}}/edit" method="GET">
                  <button type="submit" class="edit" title="Edit"><i class="material-icons">&#xE254;</i></button>
                </form>
                <form action="/category/{{_id}}/delete" method="POST">
                  <button type="submit" class="delete" title="Delete"><i class="material-icons">&#xE872;</i></button>
                </form>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
     
    </div>
  </div>
</div>
